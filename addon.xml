<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.invidious"
       name="Invidious"
       version="3.0.0"
       provider-name="lekma">

    <requires>
        <import addon="xbmc.python" version="3.0.1" />
        <import addon="xbmc.addon" version="20.2.0" />
        <import addon="script.module.iapc" version="2.1.5" />
        <import addon="script.module.requests" version="2.31.0" />
        <import addon="service.dash.manifest" version="1.0.0" />
        <import addon="script.module.inputstreamhelper" version="0.6.1" />
    </requires>

    <extension point="xbmc.python.pluginsource" library="lib/plugin.py">
        <provides>video</provides>
    </extension>

    <extension point="xbmc.service" library="lib/service.py" />

    <extension point="xbmc.python.script" library="lib/scripts.py">
        <provides>executable</provides>
    </extension>

    <extension point="xbmc.addon.metadata">
        <reuselanguageinvoker>true</reuselanguageinvoker>
        <license>GPL-3.0-only</license>
        <platform>all</platform>
        <source>https://github.com/lekma/plugin.video.invidious</source>
        <assets>
            <icon>resources/media/icon.png</icon>
            <fanart>resources/media/fanart.jpg</fanart>
        </assets>
        <summary lang="en_GB">Invidious addon</summary>
        <description lang="en_GB">Invidious addon</description>
    </extension>

</addon>
